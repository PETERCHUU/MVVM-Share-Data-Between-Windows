<Window x:Class="MVVMtest.View.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMtest.View"
        mc:Ignorable="d"
        Title="Window1" Height="180" Width="180">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" Margin="0,10">
            <Label Content="Name" Width="50" Height="30"></Label>
            <TextBox Name="nameTxt" Width="100" Height="30"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center">
            <Label Content="age" Width="50" Height="30"></Label>
            <TextBox Name="ageTxt" Width="100" Height="30"></TextBox>
        </StackPanel>
        <Button Name="addBtn" Content="Add" Width="100" Height="30" Margin="0,10" Command="{Binding Path=Addperson}"  HorizontalAlignment="Center"></Button>
    </StackPanel>
</Window>
